@model DataAccess.Models.Post

@{
    Layout = "_Layout";
    var threads = ViewBag.Threads as List<DataAccess.Models.Thread>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Create Post</title>
</head>
<body>
<div>
    <h2>Create a New Post</h2>
    <form asp-action="Create" asp-controller="Post" method="post">
        <div>
            <label asp-for="Thread">Thread</label>
            <select asp-for="ThreadId" class="form-control" asp-items="@(new SelectList(threads, "ThreadId", "Title"))">
                <option value="">Select a thread</option>
            </select>
        </div>
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control"/>
        </div>
        <div>
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-control"></textarea>
        </div>
        <div>
            <input type="submit" value="Create Post" class="btn btn-primary"/>
        </div>
    </form>
</div>

@if (ViewBag.WarningMessage != null)
{
    <div class="alert alert-warning">
        @ViewBag.WarningMessage
    </div>
}
</body>
</html>