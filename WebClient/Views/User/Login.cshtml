@{
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            <div style="border: 0; border-radius: 27.5px; box-shadow: 0 10px 30px 0 rgba(172, 168, 168, 0.43); overflow: hidden;">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="https://rubicmarketing.com/wp-content/uploads/2021/08/thiet-ke-bao-bi-banh-keo-4.jpg" alt="login" class="img-fluid">
                    </div>
                    <div class="col-md-7">
                        <div class="container">
                            <div class="brand-wrapper">
                                <img src="https://png.pngtree.com/png-clipart/20221110/original/pngtree-candy-logo-design-template-vector-picture-image_3607696.png" alt="logo" class="logo" style="width: 150px">
                            </div>
                            <p style="font-size: 25px; color: #000; font-weight: normal; margin-bottom: 23px; ">Đăng nhập </p>


                            <form asp-controller="User" asp-action="Login" method="post" id="form">
                                <div class="text-danger" style="margin-bottom: 20px">@ViewBag.Message</div>
                                <div class="form-group ">

                                    <label for="email">Email </label>
                                    <input type="text" name="email" id="email" class="form-control" placeholder="Email" required value="">

                                </div>

                                <div class="form-group ">

                                    <label for="password">Mật khẩu</label>
                                    <div style="margin-left: 295px; position: absolute; margin-top:10px; cursor: pointer" id="eye">
                                        <i class="far fa-eye"></i>
                                    </div>
                                    <input type="password" name="password" id="password" class="form-control" placeholder="***********" required value="">

                                </div>
                                <br />
                                <input name="login" id="login" style="width:120px; height:40px; border: 0; border-radius:5px; color:white; background-color: cornflowerblue" type="submit" value="Đăng nhập">
                            </form>
                            <br />
                            <a href="Forgot.jsp" class="forgot-password-link">Quên mật khẩu?</a>
                            <br />
                            <p>Không có tài khoản? <a asp-controller="User" asp-action="Register" style="color: #0D6EFD">Đăng ký ngay</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

</body>
<script>src = "js/Validator.js"</script>

<script>
    Validator({
        form: '#form',
        formGroupSelector: '.form-group',
        errorSelector: '.form-message',
        rules: [
            Validator.isEmail('#email'),
            Validator.minLength('#pass', 6),
        ],
        onSubmit: function (data) {
            // Call API
            console.log(data);
        }
    });
    });

    $(document).ready(function () {
        $('#eye').click(function () {
            $(this).toggleClass('open');
            $(this).children('i').toggleClass('fa-eye-slash fa-eye');
            if ($(this).hasClass('open')) {
                $(this).next().attr('type', 'text');
            } else {
                $(this).next().attr('type', 'password');
            }
        });
    });
</script>
</html>