@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}

@model DataAccess.Models.User

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            <div style="border: 0; border-radius: 27.5px; box-shadow: 0 10px 30px 0 rgba(172, 168, 168, 0.43); overflow: hidden;">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="https://rubicmarketing.com/wp-content/uploads/2021/08/thiet-ke-bao-bi-banh-keo-4.jpg" alt="login" class="img-fluid">
                    </div>
                    <div class="col-md-7">
                        <div class="container">
                            <div class="brand-wrapper">
                                <img src="https://png.pngtree.com/png-clipart/20221110/original/pngtree-candy-logo-design-template-vector-picture-image_3607696.png" alt="logo" class="logo" style="width: 150px">
                            </div>
                            <p style="font-size: 25px; color: #000; font-weight: normal; margin-bottom: 23px; ">Đăng Ký </p>

                            <form asp-controller="User" asp-action="RegisterPost" method="post">
                                <div class="text-danger" style="margin-bottom: 20px">@ViewBag.Message</div>
                                @* <div class="text-success" style="margin-bottom: 20px">${Result}</div> *@

                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="email" name="email" id="email" class="form-control" placeholder="Email" required asp-for="Email">
                                </div>
                                <div class="form-group mb-4">
                                    <label for="passwordHash">Mật khẩu</label>
                                    <input type="password" name="passwordHash" id="passwordHash" class="form-control" placeholder="***********" required asp-for="PasswordHash">
                                </div>
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input type="text" name="username" id="username" class="form-control" placeholder="Họ và tên" required asp-for="UserName">
                                </div>

                                <input type="hidden" class="form-control" asp-for="RoleId" value="2">

                                <br />
                                <input name="register" id="register" style="width:120px; height:40px; border: 0; border-radius:5px; color:white; background-color: cornflowerblue" type="submit" value="Đăng Ký">
                            </form>

                            <br />
                            <p>Already registered? <a asp-controller="User" asp-action="Login" style="color: #0D6EFD">Login</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>